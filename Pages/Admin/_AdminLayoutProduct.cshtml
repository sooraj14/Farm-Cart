
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FarmSquare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FarmSquare.styles.css" asp-append-version="true" />
</head>
<body> 
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-success border-bottom box-shadow mb-3" style="background: linear-gradient(to left, rgba(0, 255, 127, 0.1), rgba(124, 252, 0, 0.9)); margin-left:0px;">
            <div class="container">
                
               
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex ">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item ">
                            <img src="~/Logo.png" alt="Alternate Text" style=" max-width: 200px; height: 40px; margin-left:10px;" />

                        </li>
                        <li class="nav-item " style="padding-left:30px;">
                            <a class="nav-link text-white fs-5 " asp-area="" asp-page="/Admin/AdminDashboard">Dashboard</a>
                        </li>
                        <li class="nav-item " style="padding-left:30px;">
                            <a class="nav-link text-white fs-5" asp-area="" asp-page="/Admin/ViewProductcshtml">Product</a>
                        </li>

                        <li class="nav-item " style="padding-left:30px;">
                            <a class="nav-link text-white fs-5" asp-area="" asp-page="/Index">Logout</a>
                        </li>

                      
                    </ul>
                </div>

               
            </div>
        </nav>
    </header>
    
        <main role="main" class="pb-o">
            @RenderBody()
        </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


</body>

<footer class="border-top footer text-black bg-success" style="background: linear-gradient(to left, rgba(0, 255, 127, 0.1), rgba(124, 252, 0, 0.9));">
        <div class="container text-black text-center">
            &copy; 2024 - FarmSquare - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>


</html>

