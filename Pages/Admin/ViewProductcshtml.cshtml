@page
@model FarmCart.Pages.Admin.ViewProductcshtmlModel
@{

    Layout = "_AdminLayoutProduct";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FarmSquare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FarmSquare.styles.css" asp-append-version="true" />
</head>
<body>


<div class="text-center text-success fs-5 m-3">PRODUCT DETAILS</div>

    <div style="max-width: 1200px; margin: auto; overflow-x: auto;">
<table class="border-2 table table-striped table-striped table-sm">
    <thead class="border-2 ">
        <tr class="text-center">
            <th class="border p-1 text-danger text-center ">Product-Name</th>
            <th class="border p-1 text-danger">Brand-Name</th>
            <th class="border p-1 text-danger">Supplier</th>
            <th class="border p-1 text-danger">Price</th>
            <th class="border p-1 text-danger">Description</th>
            <th class="border p-1 text-danger">image</th>
            <th class="border p-1 text-danger">Action</th>
                
      </tr>
    </thead>

    
     @{
         foreach(var prodd in Model.prodtable   )
         {
             <tr class="text-center">
                 <td class="border-3 p-1 ">@prodd.product_name</td>
                 <td class="border-3 p-1 ">@prodd.brand_name</td>
                 <td class="border-3 p-1 ">@prodd.sup_id</td>
                 <td class="border-3 p-1 ">@prodd.product_price</td>
                 <td class="border-3 p-1 ">@prodd.product_description</td>
                 <td class="border-3 p-1 ">@prodd.imagepath</td>
                 
                    <td class=" border-3 p-2 text-center">

                        @if (prodd.is_available.Equals(true))
                        {

                            <span class="btn btn-success btn-sm"> Available</span>
                        }


                        else
                        {
                            <span class="btn btn-danger  btn-sm">Unavilable</span>
                        }

                    </td>

                 </tr>

         }
     }
    </table>
    </div>
</body>
</html>