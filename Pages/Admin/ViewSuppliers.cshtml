@page
@model FarmCart.Pages.Admin.ViewSuppliersModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FarmSquare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FarmSquare.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="text-center text-success">SUPPLIER DETAILS</div>

    <div class="container">
        <div class="row g-5">
           
            @{
                foreach (var st in Model.supplierTable)
                {
                    <div class="col-md-2 mb-4">                            
                 
                        <div class="card" style="width: 110%; height:110%">
                        
                            <img src="~/seller2.jpg" class="card-img-top" alt="Supplier Image" style="height: 150px; object-fit: cover;">
                            <div class="card-body" style="height: 180px;">
                                <h5 class="card-title">Name : @st.sup_name</h5>
                                <h6>Seller-Id: @st.sup_id</h6>
                                <h6>Contact: @st.sup_phone</h6>
                                <h6>Email:@st.sup_email</h6>
<div>
                                @if (st.Is_Valid)
                                {
                                    <form method="post" asp-page-handler="Disable"
                                          asp-route-id="@st.sup_id" asp-route-status=false>
                                        <button class="btn btn-danger" type="submit">Disable</button>
                                    </form>
                                }
                                else
                                {
                                    <form method="post" asp-page-handler="Enable"
                                          asp-route-id="@st.sup_id"
                                          asp-route-newstatus=true>
                                        <button class="btn btn-success" type="submit">Enable</button>
                                    </form>
                                }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

</body>
</html>
