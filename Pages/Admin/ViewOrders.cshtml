@page
@model FarmCart.Pages.Admin.ViewOrdersModel
@{

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FarmSquare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FarmSquare.styles.css" asp-append-version="true" />
</head>
<body>

<table class="border-2 table table-striped table-striped">
    <thead class="border-3 ">
        <tr class="text-center"> 
            <th class="border p-1 text-danger text-center ">Order-NO</th>
            <th class="border p-1 text-danger">Order-Date</th>
            <th class="border p-1 text-danger">Order_amount</th>
            <th class="border p-1 text-danger">Order-Location</th>
            <th class="border p-1 text-danger">Customer-Id</th>
            

        </tr>
    </thead>


        @{
            foreach(var o in Model.ord)
            {
               <tr class="text-center">
                 <td class="border-3 p-1 ">@o.ord_no</td>
                 <td class="border-3 p-1 ">@o.ord_date</td>
                 <td class="border-3 p-1 ">@o.total_amount</td>
                 <td class="border-3 p-1 ">@o.ord_address</td>
                 <td class="border-3 p-1 ">@o.cust_id</td>
                 
               </tr>
            }

    }
    </table>
   

    </body>
    </html>
