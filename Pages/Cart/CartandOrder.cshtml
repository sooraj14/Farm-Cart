
@page
@model FarmCart.Pages.Cart.CartandOrderModel
@{
    ViewData["Title"] = "Cart and Order";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FarmSquare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FarmSquare.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-5">
        @foreach (var item in @Model.Prodsfeeds)
        {
            <div class="card mb-4 shadow-sm rounded border-0" style="max-width: 900px; margin: auto;">
                <div class="d-flex flex-row g-0">

                 
                    <div class="flex-shrink-0">
                        <img src="~/Images/@item.Product.imagepath" class="img-fluid rounded-start" alt="@item.Product.product_name" style="max-width: 300px; height: auto;">
                    </div>

                   
                    <div class="flex-grow-1 p-3">
                        <h5 class="card-title text-dark fw-bold">@item.Product.product_name</h5>
                        <p class="card-text">@item.Product.brand_name</p>
                        <p class="card-text"><strong>Description:</strong> @item.Product.product_description</p>
                        <p class="card-price fw-bold text-success"><strong>Price:</strong> $@item.Product.product_price</p>
                        <p class="card-quantity"><strong>Quantity:</strong> @item.Product.product_quantity</p>

                        <div class="d-flex align-items-center mb-3">
                            <span class="badge bg-warning text-dark me-2">★★★★☆</span>
                            <span class="text-success fw-bold">50% OFF</span>
                        </div>

                      
                        <div class="d-flex">
                            <form method="post">
                                <button type="submit" asp-page-handler="Cart" asp-route-product_id="@item.Product.product_id" class="btn  me-2 text-white" style="background-color:limegreen">Add to cart</button>
                                <button type="submit" asp-page-handler="BuyNow" asp-route-product_id="@item.Product.product_id" class="btn b text-white" style="background-color:limegreen">Buy</button>
                            </form>
                        </div>
                    </div>

                    
                    <div class="flex-shrink-0 p-3" style="max-width: 300px;">
                        <h6>Reviews</h6>
                        @if (item.Prodsfeed.Any())
                        {
                            <ul class="list-group">
                                @foreach (var feedback in item.Prodsfeed)
                                {
                                    <li class="list-group-item">
                                        <strong>Rating:</strong> @feedback.rating/5 <br />
                                        <strong>Comment:</strong> @feedback.feed_content
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p>No feedback available.</p>
                        }
                    </div>

                </div>

                <div class="card-footer text-muted">
                    <div class="row">
                        <div class="col-6">
                            <small><i class="bi bi-truck"></i> Free Delivery</small>
                        </div>
                        <div class="col-6 text-end">
                            <small><i class="bi bi-arrow-repeat"></i> 7 Day Return Policy</small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <small><i class="bi bi-shield-lock"></i> Warranty Policy</small>
                        </div>
                        <div class="col-6 text-end">
                            <small><i class="bi bi-shield-check"></i> Secure Transaction</small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-center">
                            <span class="badge bg-primary">Top Brand</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


</body>
</html>
















