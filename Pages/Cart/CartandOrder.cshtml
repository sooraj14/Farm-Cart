
@page
@model CartandOrderModel
@{
}


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ7H0K4BAPkA+H6Gd9F5lmH9g5Bz6tyz8o4zIh5S/6n9GTT5l0xDp7q6ZT2w" crossorigin="anonymous">

<form method="post">
    <div class="container mt-5">
        @foreach (var pr in @Model.prodlist)
        {
            <div class="card mb-4 shadow-sm rounded border-0" style="max-width: 900px; margin: auto;">
                <div class="row g-0">
                  
                    <div class="col-md-4">
                        <img src="~/Images/@pr.imagepath" class="img-fluid rounded-start" alt="@pr.product_name">
                    </div>

                   
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title text-dark fw-bold">@pr.product_name</h5>
                            <p class="card-text"><strong>Brand:</strong> @pr.brand_name</p>
                            <p class="card-text text-muted">@pr.product_description</p>
                            <p class="card-price fw-bold text-success">Price: $@pr.product_price</p>
                            <p class="card-quantity"><strong>Available Quantity:</strong> @pr.product_quantity</p>

                            
                            <div class="d-flex align-items-center mb-3">
                                <span class="badge bg-warning text-dark me-2">★★★★☆</span>
                                <span class="text-success fw-bold">50% OFF</span>
                            </div>

                            
                            <div class="d-flex justify-content-start">
                                <button class="btn btn-primary me-2" asp-page-handler="Cart" asp-route-product_id="@pr.product_id">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                                <button class="btn btn-success" asp-page-handler="BuyNow" asp-route-product_id="@pr.product_id">
                                    <i class="bi bi-basket"></i> Buy Now
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

               
                <div class="card-footer text-muted">
                    <div class="row">
                        <div class="col-6">
                            <small><i class="bi bi-truck"></i> Free Delivery</small>
                        </div>
                        <div class="col-6 text-end">
                            <small><i class="bi bi-arrow-repeat"></i> 7 Day Return Policy</small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <small><i class="bi bi-shield-lock"></i> Warranty Policy</small>
                        </div>
                        <div class="col-6 text-end">
                            <small><i class="bi bi-shield-check"></i> Secure Transaction</small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-center">
                            <span class="badge bg-primary">Top Brand</span>
                        </div>
                    </div>
                </div>

            </div>
        }
    </div>
</form>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


















