@page
@model CartandOrderModel
@{
}

<form method="post">
    <div class="container mt-5">
        @{
            foreach (var pr in @Model.prodlist)
            {
                <div class="card mb-4 shadow-sm rounded border-0" style="max-width: 900px; margin: auto;">
                    <div class="row g-0">
                       
                        <div class="col-md-4">
                            <img src="~/Images/@pr.imagepath" class="img-fluid rounded-start" alt="@pr.product_name">
                        </div>

                     
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@pr.product_name</h5>
                                <p class="card-text"><strong>Brand:</strong> @pr.brand_name</p>
                                <p class="card-text">@pr.product_description</p>
                                <p class="card-price fw-bold text-success">Price: $@pr.product_price</p>
                                <p class="card-quantity"><strong>Available Quantity:</strong> @pr.product_quantity</p>

                                <div class="d-flex align-items-center mb-2">
                                    <span class="badge bg-warning text-dark me-2">★★★★☆</span> 
                                    <span class="text-success fw-bold">50% OFF</span> 
                                </div>
                                <div class="mb-3">
                                    <label for="quantitySelect" class="form-label fw-bold">Select Quantity:</label>
                                    <select id="quantitySelect" name="quantity" class="form-select" style="width: auto;">
                                        @for (int i = 1; i <= pr.product_quantity; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>


                                <button class="btn btn-primary me-2" asp-page-handler="Cart" asp-route-product_id="@pr.product_id">Add to Cart</button>
                                <button class="btn btn-success" asp-page-handler="Buy" asp-route-product_id="@pr.product_id">Buy Now</button>

                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</form>























