@page
@model FarmCart.Pages.OrderPlacedModel
@{
}

<h2 class="text-center my-4">Order Confirmed!</h2>

@if (Model.OrderDetails != null)
{
    <div class="container order-summary-container">
        <div class="card order-summary-card mb-5 shadow-sm rounded">
            <div class="card-body">
                <h4 class="order-id">CustomerID: @Model.OrderDetails.cust_id</h4>
                <p><strong>Order Date:</strong> @Model.OrderDetails.ord_date.ToString("MM/dd/yyyy")</p>
                <p><strong>Product:</strong> @Model.OrderDetails.products</p>
                <p><strong>Total Amount:</strong> <span class="text-success fw-bold">$@Model.OrderDetails.total_amount</span></p>
               
            </div>
        </div>

  
    </div>
}
else
{
    <p class="text-center text-danger">Order details not found.</p>
}

<div class="text-center mt-5">
    <a href="/" class="btn btn-primary">Continue Shopping</a>
</div>

<style>
    .order-summary-container {
        max-width: 900px;
        margin: auto;
    }

    .order-summary-card, .order-item-card {
        border: 0;
    }

    .order-item-card {
        background-color: #f9f9f9;
    }

    .order-id {
        font-weight: 700;
        color: #4CAF50;
    }
</style>




