<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FarmSquare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FarmSquare.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-success  box-shadow mb-0" style="background: linear-gradient(to left, rgba(0, 255, 127, 0.1), rgba(124, 252, 0, 0.9));">

            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index"></a>
                <img src="~/Images/lo.png" alt="Alternate Text" style="max-width:200px; height:auto;" />
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 d-flex align-items-center">
                       
                          <li class="nav-item">
                            <a class="nav-link text-white fs-5" asp-area="" asp-page="/Supplier/SupHome">Home</a>
                          </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fs-5" asp-area="" asp-page="/Supplier/ViewProduct">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fs-5" asp-area="" asp-page="/Supplier/MyOrders">My Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fs-5" asp-area="" asp-page="/Supplier/Feedbacks">Feedbacks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white fs-5" asp-area="" asp-page="/Index">Logout</a>
                        </li>
                        

                    </ul>
                </div>
            </div>
        </nav>
    </header>
   
        <main role="main" class="pb-0">
            @RenderBody()
        </main>
    

    <footer class="border-top footer text-black bg-success" style="background: linear-gradient(to left, rgba(0, 255, 127, 0.1), rgba(124, 252, 0, 0.9));">
        <div class="container">
            &copy; 2024 - FarmSquare - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>