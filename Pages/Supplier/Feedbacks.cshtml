<div class="d-flex flex-wrap justify-content-start">
    @foreach (var fee in Model.Feedback) 
    {
        <div class="card m-3" style="width: 18rem;">
            <img src="~/Images/@fee.image" class="card-img-top" alt="@fee.product_name">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@fee.product_name</h5>
                
                
                <p class="card-text">
                    <strong>Average Rating:</strong>
                    @for (int i = 0; i < Math.Round(@fee.AverageRating); i++)
                    {
                        <img src ="~/Images/star.png" style="width:15px;height:15px;"/>
                    }
                </p>
                
                
                @foreach (var f in fee.Feedbacks)
                {
                    <p class="card-text">@f.feed_content</p>
                
                }
            </div>
        </div>
    }
</div>

