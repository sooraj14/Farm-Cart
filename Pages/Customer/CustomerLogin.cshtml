@page
@model FarmCart.Pages.Customer.CustomerLoginModel

<div class="container d-flex align-items-center justify-content-center vh-100">
    <div class="w-75 w-md-50 w-lg-25 border border-2 p-3 rounded-3 shadow bg-light" style="max-width: 400px;">
        <div class="text-center mb-3">
            <img src="~/farmsquare rmovebg.png" alt="FarmSquare Logo" class="img-fluid" style="max-width: 150px;">
        </div>
     

       
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <form method="post">
            <div class="mb-3">
                <label for="emailInput" class="form-label">Email</label>
                <input type="email" class="form-control" id="emailInput" asp-for="Login.Email" placeholder="Enter your email" required>
                <span asp-validation-for="Login.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="passwordInput" class="form-label">Password</label>
                <input type="password" class="form-control" id="passwordInput" asp-for="Login.Password" placeholder="Enter your password" required>
                <span asp-validation-for="Login.Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary" style="background-color:limegreen">Login</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <p>Don't have an account? <a href="/Customer/Customer" style="color:limegreen;text-decoration:none;">Sign up here</a></p>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 100%;
    }

    .shadow {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
</style>
