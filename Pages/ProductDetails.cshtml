@page
@model FarmCart.Pages.ProductDetailsModel

@{
    ViewData["Title"] = "Product Details";
}

<h2 class="text-center my-4">Product Details</h2>

<div class="container product-details-container">
    <div class="card product-details-card mb-5 shadow-sm rounded">
        <div class="row g-0">

            <div class="col-md-4">
                <img src="~/Images/@Model.Product.imagepath" class="img-fluid rounded-start" alt="@Model.Product.product_name" style="height: 250px; object-fit: cover;">
            </div>

            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title text-dark fw-bold">@Model.Product.product_name</h5>
                    <p class="card-text"><strong>Brand:</strong> @Model.Product.brand_name</p>
                    <p class="card-text text-muted">@Model.Product.product_description</p>
                    <p class="card-price fw-bold text-success">Price: $@Model.Product.product_price</p>
                    <p class="card-quantity"><strong>Available Quantity:</strong> @Model.Product.product_quantity</p>

                    <div class="d-flex align-items-center mb-3">
                       
                        <span class="text-success fw-bold">50% OFF</span>
                    </div>

                    <form method="post">
                        <button class="btn btn-primary me-2" asp-page-handler="Cart" asp-route-product_id="@Model.Product.product_id">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                    </form>
                </div>

                <div class="card-footer text-muted">
                    <div class="row">
                        <div class="col-6">
                            <small><i class="bi bi-truck"></i> Free Delivery</small>
                        </div>
                        <div class="col-6 text-end">
                            <small><i class="bi bi-arrow-repeat"></i> 7 Day Return Policy</small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <small><i class="bi bi-shield-lock"></i> Warranty Policy</small>
                        </div>
                        <div class="col-6 text-end">
                            <small><i class="bi bi-shield-check"></i> Secure Transaction</small>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-center">
                            <span class="badge bg-primary">Top Brand</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
