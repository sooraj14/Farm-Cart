 <div class="container mt-5">
    <h2 class="text-center">Our Farm Products</h2>
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 row-cols-xxl-5 g-3">

        @foreach (var product in Model.Products)
        {
            <form method="post">
                <div class="col">
                    <div class="card product-card border-0 shadow-sm rounded" style="background-color: #f9f9f9;">
                        <div class="product-image-container">
                            <img src="~/Images/@product.imagepath" class="card-img-top product-image" alt="Product Image">
                        </div>
                        <div class="card-body text-center">
                            <h5 class="card-title">@product.product_name</h5>
                            <p class="card-text fw-bold">@product.brand_name</p>
                            <p class="card-price fw-bold">$@product.product_price</p>
                            <div class="d-flex justify-content-center">
                                
                                <button type="submit" name="action" value="addToCart" class="btn  view-product-btn" style="background-color:limegreen; color:white;">View Product</button>
                                <input type="hidden" name="productId" value="@product.product_id" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        }
    </div>
</div>
